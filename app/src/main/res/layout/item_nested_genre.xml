<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.octopus.moviesapp.ui.tv_show_details.uistate.GenresUiState" />

        <variable
            name="listener"
            type="com.octopus.moviesapp.ui.nested.NestedGenresListener" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space2x">

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.name}"
            android:textColor="@color/secondary"
            app:chipStrokeColor="@android:color/transparent"
            app:chipBackgroundColor="@color/primary_container"
            tools:text="Action"/>

    </LinearLayout>
</layout>