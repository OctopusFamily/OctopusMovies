<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.octopus.moviesapp.ui.movies.MoviesViewModel" />

        <variable
            name="listener"
            type="com.octopus.moviesapp.ui.movies.MoviesClicksListener" />

        <variable
            name="moviesCategory"
            type="com.octopus.moviesapp.domain.enums.MoviesCategory" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space4x"
            android:paddingHorizontal="@dimen/space8x"
            android:scrollbars="none"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/popular"
                    android:textColor="@color/surface"
                    app:chipBackgroundColor="@color/primary"
                    app:chipStrokeColor="@android:color/transparent"
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:onClick="@{()->viewModel.onChipClick(moviesCategory.POPULAR)}"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/now_playing"
                    app:chipStrokeColor="@android:color/transparent"
                    android:onClick="@{()->viewModel.onChipClick(moviesCategory.NOW_PLAYING)}"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upcoming"
                    app:chipStrokeColor="@android:color/transparent"
                    android:onClick="@{()->viewModel.onChipClick(moviesCategory.UPCOMING)}"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/top_rated"
                    app:chipStrokeColor="@android:color/transparent"
                    android:onClick="@{()->viewModel.onChipClick(moviesCategory.TOP_RATED)}"/>
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movies_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="@dimen/space2x"
            android:paddingHorizontal="@dimen/space6x"
            app:spanCount="2"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/horizontal_scroll_view"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_movie" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>