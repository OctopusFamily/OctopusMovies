<resources>
    <!--    Text Styles-->
    <style name="text_style_headline_small" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="text_style_label_small" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="text_style_label_medium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="text_style_label_large" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="text_style_body_small" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="text_style_body_medium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="text_style_body_large" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <!--    Shapeable Image View Styles-->
    <style name="rounded_image_view">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/space6x</item>
    </style>

    <style name="bottom_rounded_image_view">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/space6x</item>
        <item name="cornerSizeBottomRight">@dimen/space6x</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ChipStyle" parent="@style/Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>
</resources>

