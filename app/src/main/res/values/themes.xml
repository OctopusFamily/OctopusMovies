<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>


    <style name="TextStyle.body_small">
        <item name="android:textSize">@dimen/text_body_small</item>
    </style>

    <style name="TextStyle.body_medium">
        <item name="android:textSize">@dimen/text_body_medium</item>
    </style>

    <style name="TextStyle.body_large">
        <item name="android:textSize">@dimen/text_body_large</item>
    </style>

    <style name="TextStyle.headline_small">
        <item name="android:textSize">@dimen/text_headline_small</item>
    </style>

    <style name="TextStyle.label_small">
        <item name="android:textSize">@dimen/text_label_small</item>
    </style>

    <style name="TextStyle.label_medium">
        <item name="android:textSize">@dimen/text_label_medium</item>
    </style>

    <style name="TextStyle.label_large">
        <item name="android:textSize">@dimen/text_label_large</item>
    </style>


</resources>